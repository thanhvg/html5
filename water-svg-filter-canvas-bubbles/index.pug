svg#water
  defs
    filter#filter
      feTurbulence(
      baseFrequency="0.01" 
      numOctaves="1" 
      seed="1" 
      type="turbulence" 
      result="turbulence"
      )
        animate(
        attributeName="baseFrequency" 
        values="0.01; 0.005; 0.01;" 
        repeatCount="indefinite" 
        dur="7s" 
        begin="0"
        )
      feDisplacementMap(
      in="SourceGraphic" 
      in2="turbulence" 
      xChannelSelector="R" 
      yChannelSelector="B"
      scale="5" 
      result="displacement"
      )
  text(
  x="50"
  y="50"
  )
    | Water
